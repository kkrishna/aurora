{
  "AuroraExecutor" : {
    "executor": {
      "command": {
        "value": "thermos_executor.pex",
        "arguments": [
          "--announcer-enable",
          "--announcer-ensemble",
          "localhost:2181"
        ],
        "uris": [
          {
            "value": "/home/vagrant/aurora/dist/thermos_executor.pex",
            "executable": true,
            "extract": false,
            "cache": false
          }
        ]
      },
      "resources": [
        {
          "name": "cpu",
          "type": "SCALAR",
          "scalar": {
            "value": 0.25
          }
        },
        {
          "name": "ram",
          "type": "SCALAR",
          "scalar": {
            "value": 128
          }
        },
        {
          "name": "disk",
          "type": "SCALAR",
          "scalar": {
            "value": 256
          }
        }
      ]
    },
    "volume_mounts": [
      {
        "mode": "RO",
        "container_path": "/container",
        "host_path": "/host"
      },
      {
        "mode": "RW",
        "container_path": "/container2",
        "host_path": "/host2"
      }
    ],
    "config" : {
      "thermosObserverRoot" : "/var/run/thermos"
    }
  }
}

